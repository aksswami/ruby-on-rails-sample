<% @page_title = "Section" %>
<%= link_to("<< Back to Sections", {:action => 'index', :page_id => @section.page_id}, :class => 'back-link') %>

<div class="section edit">
	<h2>Edit Section</h2>

	<%= form_for(:section, :url => {:action => 'update', :id => @section.id, :page_id => @section.page_id}) do |f| %>
	<%= render(:partial => "form", :locals => {:f => f}) %>

	<div class="form-buttons">
		<%= submit_tag("Update Section") %>
	</div>
		
	<% end %>

</div>