 <%= link_to("<< Back to Sections", {:action => 'index', :page_id => @section.page_id}, :class => 'back-link') %>

<div class="section edit">
	<h2>Edit Section</h2>

	<%= form_for(:section, :url => {:action => 'update', :id => @section.id, :page_id => @section.page_id}) do |f| %>
	<table summary="Section form fields">
		<tr>
			<th>Name</th>
			<td><%= f.text_field(:name) %></td>
		</tr>	
		<tr>
			<th>Position</th>
			<td><%= f.text_field(:position) %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%= f.text_field(:visible) %></td>
		</tr>
		<tr>
			<th>Content-Type</th>
			<td><%= f.text_field(:content_type) %></td>
		</tr>
		<tr>
			<th>Content</th>
			<td><%= f.text_field(:content) %></td>
		</tr>
	</table>

	<div class="form-buttons">
		<%= submit_tag("Update Section") %>
	</div>
		
	<% end %>

</div>